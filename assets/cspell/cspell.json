{
    // Enable your dictionary by adding it to the list of `dictionaries`
    "dictionaries": ["workspace"],
    "ignorePaths": [],

    // Tell CSpell about your dictionary
    "dictionaryDefinitions": [
        {
            // The name of the dictionary is used to look it up.
            "name": "workspace",
            // Path to the custom word file. Relative to this `cspell.json` file.
            "path": "workspace.txt",
            // Some editor extensions will use `addWords` for adding words to your
            // personal dictionary.
            "addWords": true
        }
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": ["markdown_code_block"],
            "dictionaries": [
                "elixir",
                "workspace"
            ]
        },
        {
            "languageId": "*",
            "dictionaries": [
                "elixir",
                "workspace"
            ],
            "ignoreRegExpList": ["markdown_code_block", "quoted_string"]
        }
    ]
}
